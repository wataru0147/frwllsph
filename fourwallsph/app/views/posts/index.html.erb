
  <% if user_signed_in? %>
  <% else %>
  <div class="container">
      <div class="jumbotron">
        <h1> Welcome to 4WallsPH </h1>
         <p> Most practical way to search for houses in the city. </p>
           <center><%= link_to "Sign up now!", new_user_registration_path , class: "btn btn-lg center btn-primary " %></center>
     </div>
  </div>
  <% end %>

<div class="container">
  <div class="transitions-enabled" id="posts">
    <% @post.each do |post| %>
      <div class="box panel panel-default">
   			 <%= link_to (image_tag post.post_image.url), post%>
          <div class="panel-body">
            <h2>
             <%= link_to post.title, post  %>
            </h2>
            <p>
            <em> Last Updated :    <%= post.updated_at.strftime ('%b, %d, %Y') %> </em>
            </p>
         </div>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
<%= will_paginate @post, previous_label: "Newer" , next_label: "Older", inner_window: 1, outer_window: 1 %>
</div>
