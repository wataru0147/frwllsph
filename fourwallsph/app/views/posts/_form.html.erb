<%= simple_form_for @post, html: { multipart: true} do |f| %>
	<% if @post.errors.any? %>
	  <div id="error_explanation">
      <div class="alert alert-danger">
	 <h2>Post <unsuccessful></unsuccessful>, 
	 	 there is/are <%= pluralize(@post.errors.count, "error") %>.</h2>
	 	 prevented this post from saving

	 	   <% @post.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
        <% end %>
    </div>
    </div>
<% end %> 

<div class="form-group">
<%= f.input :title, placeholder: "up to 40 characters only", input_html: {class: 'form-control'} %>
</div>
<div class="form-group">

<%= f.input :address, label: "Exact Address",input_html: {class: 'col-md-9'} %>
<%= f.collection_select :city_id,  City.all, :id, :name, {prompt: "Select City"},  {class: "form-control"} %>
<%= f.input :post_image, input_html: {class: 'form-control'} %>
<%= f.input :post_image_opt1, label: "Additional Image", input_html: {class: 'form-control'} %>
<%= f.input :post_image_opt2, label: "Additional Image", input_html: {class: 'form-control'} %>
<%= f.input :post_image_opt3, label: "Additional Image", input_html: {class: 'form-control'} %>
<%= f.input :rental_fee, label: 'Rental Fee Per Month', placeholder:"Rent per Month", hint: "(e.g) 10000.00", input_html: {class: 'form-control'} %>
<%= f.input :contact_number, placeholder: "Mobile/Landline",hint: "(e.g) mobile:9150123457 landline: 5289933 *dont use spaces", input_html: {class: 'form-control'} %>
<%= f.input :contract_term, placeholder: "Number of Months of the Contract", input_html: {class: 'form-control'} %>
<%= f.input :deposit_pay, placeholder: "Number of Months of Deposit", input_html: {class: 'form-control'} %>
<%= f.input :advance_pay, placeholder: "Number of Months to pay in Advance", input_html: {class: 'form-control'} %>

<%= f.input :description, input_html: {class: 'form-control'} %>
<%= f.button :submit, class: 'btn btn-primary' %>
</div>
<% end %>